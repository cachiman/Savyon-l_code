{
  "mcpServers": {
    "cloudflare": {
      "args": [
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/sse"
      ],
      "autoApprove": [
        "search_cloudflare_documentation",
        "migrate_pages_to_workers_guide"
      ],
      "command": "npx"
    },
    "git": {
      "args": [
        "mcp-server-git",
        "--repository",
        "${REPOSITORY_PATH}"
      ],
      "command": "uvx",
      "disabled": false
    },
    "github": {
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    }
  }
}
